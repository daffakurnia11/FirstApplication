<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/text_main_title"
        android:textColor="@color/aqua"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnBarVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tosca"
        android:text="@string/text_bar_volume"
        android:textColor="@color/navy" />

    <Button
        android:id="@+id/btnIntentActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tosca"
        android:textColor="@color/navy"
        android:text="@string/btn_intent_activity" />

    <Button
        android:id="@+id/btnFlexibleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tosca"
        android:textColor="@color/navy"
        android:text="@string/text_fragment_activity" />

    <Button
        android:id="@+id/btnLayoutMaterials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/tosca"
        android:textColor="@color/navy"
        android:text="@string/btn_layout_materials" />

</LinearLayout>